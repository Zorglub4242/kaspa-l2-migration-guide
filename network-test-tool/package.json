{
  "name": "kaspa-network-test-tool",
  "version": "1.0.0",
  "description": "Comprehensive testing tool for Kaspa L2 networks with Metabase analytics (Kasplex and IGRA)",
  "main": "index.js",
  "scripts": {
    "start": "node cli.js",
    "test": "node cli.js test",
    "test:interactive": "node cli.js interactive",
    "deploy": "node cli.js deploy",
    "status": "node simple-status.js",
    "status:full": "node cli.js status",
    "results": "node cli.js results",
    "analytics": "node scripts/start-metabase.js",
    "analytics:jar": "node scripts/start-metabase-jar.js",
    "metabase": "node scripts/start-metabase.js",
    "metabase:jar": "node scripts/start-metabase-jar.js",
    "test:quick": "node cli.js test --mode quick --parallel",
    "test:comprehensive": "node cli.js test --mode comprehensive --parallel --tests evm,defi,load,finality",
    "test:stress": "node cli.js test --mode stress --tests load --networks kasplex",
    "test:evm": "node cli.js test --tests evm",
    "test:defi": "node cli.js test --tests defi",
    "test:load": "node cli.js test --tests load",
    "test:finality": "node cli.js test --tests finality",
    "test:create2": "npx hardhat run scripts/run-create2-tests.js",
    "test:create2:sepolia": "npx hardhat run scripts/run-create2-tests.js --network sepolia",
    "test:create2:kasplex": "npx hardhat run scripts/run-create2-tests.js --network kasplex",
    "test:create2:igra": "npx hardhat run scripts/run-create2-tests.js --network igra",
    "test:kasplex": "node cli.js test --networks kasplex",
    "test:igra": "node cli.js test --networks igra",
    "test:sepolia": "node cli.js test --networks sepolia",
    "test:all-networks": "node cli.js test --networks sepolia,kasplex,igra --parallel",
    "deploy:all": "node cli.js deploy --parallel",
    "deploy:kasplex": "node cli.js deploy --networks kasplex",
    "deploy:igra": "node cli.js deploy --networks igra",
    "deploy:sepolia": "node cli.js deploy --networks sepolia",
    "contracts": "node cli.js contracts",
    "contracts:list": "node cli.js contracts --action list",
    "contracts:health": "node cli.js contracts --action health",
    "contracts:verify": "node cli.js contracts --action verify",
    "api": "node -e \"const { ExportAPI } = require('./lib/export-api'); const api = new ExportAPI(); api.start();\"",
    "api:start": "node -e \"const { ExportAPI } = require('./lib/export-api'); const api = new ExportAPI(); api.start();\"",
    "db:stats": "node -e \"const { TestDatabase } = require('./lib/database'); const db = new TestDatabase(); db.initialize().then(() => { console.log(JSON.stringify(db.getStats(), null, 2)); db.close(); });\"",
    "db:purge": "node -e \"const { TestDatabase } = require('./lib/database'); const db = new TestDatabase(); db.initialize().then(() => { db.purgeAllTestResults(true); db.close(); });\"",
    "db:optimize": "node -e \"const { TestDatabase } = require('./lib/database'); const db = new TestDatabase(); db.initialize().then(() => { db.optimize(); db.close(); });\"",
    "db:backup": "node -e \"const { TestDatabase } = require('./lib/database'); const db = new TestDatabase(); db.initialize().then(() => { db.backup('./backup-' + Date.now() + '.db'); db.close(); });\"",
    "legacy:test-suite": "powershell -ExecutionPolicy Bypass -File run-full-test-suite.ps1",
    "legacy:generate-report": "node generate-report.js --latest",
    "report": "node generate-enhanced-report.js",
    "report:latest": "node generate-enhanced-report.js --latest",
    "report:comprehensive": "node generate-enhanced-report.js --output comprehensive-enhanced-analysis.html",
    "setup": "npm install && echo 'Network test tool setup complete!'",
    "clean": "rm -rf cache artifacts test-results/*.json",
    "clean:all": "rm -rf cache artifacts test-results/*.json data/test-results.db exports/*"
  },
  "bin": {
    "blockchain-test": "./cli.js"
  },
  "keywords": [
    "ethereum",
    "kasplex",
    "igra",
    "kaspa",
    "l2",
    "testing",
    "finality",
    "evm-compatibility",
    "defi",
    "blockchain"
  ],
  "author": "Kaspa L2 Testing Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "ethers": "^5.7.2",
    "hardhat": "^2.19.0"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "better-sqlite3": "^9.6.0",
    "blessed": "^0.1.81",
    "chalk": "^4.1.2",
    "cli-progress": "^3.12.0",
    "commander": "^9.4.1",
    "cors": "^2.8.5",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "inquirer": "^8.2.6",
    "moment": "^2.29.4",
    "node-cron": "^3.0.2",
    "ora": "^5.4.1",
    "simple-statistics": "^7.8.3",
    "sqlite3": "^5.1.7",
    "table": "^6.8.1"
  }
}
